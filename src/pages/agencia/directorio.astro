---
import Base from '../../layouts/Base.astro';
import HeroPage from '../../components/HeroPage.astro';
import SectionTitle from '../../components/SectionTitle.astro';

const base = import.meta.env.BASE_URL;

// Breadcrumb
const breadcrumb = [
  { label: 'Inicio', href: base },
  { label: 'Agencia', href: '#' },
  { label: 'Directorio' }
];

// Tarjetas principales
const directorios = [
  {
    titulo: "Directorio Servidores",
    descripcion: "Información de contacto de los servidores públicos de la Agencia ITRC",
    icon: "fa-user-tie",
    url: "https://www.itrc.gov.co/Itrc/wp-content/uploads/2025/09/Directorio-servidores-09-09-2025.pdf",
    color: "navy"
  },
  {
    titulo: "Directorio Contratistas",
    descripcion: "Información de los contratistas vinculados a la Agencia ITRC",
    icon: "fa-briefcase",
    url: "https://www.itrc.gov.co/Itrc/wp-content/uploads/2024/08/Directorio-Contratistas.pdf",
    color: "gold"
  },
  {
    titulo: "Directorio SIGEP",
    descripcion: "Sistema de Información y Gestión del Empleo Público - Hojas de vida",
    icon: "fa-id-card",
    url: "https://www.funcionpublica.gov.co/web/sigep2/directorio",
    color: "green",
    external: true
  }
];
---

<Base title="Directorio de Servidores y Contratistas" class="page-directorio">
  <HeroPage
    title="Directorio"
    subtitle="Servidores y Contratistas de la Agencia ITRC"
    icon="fa-address-book"
    breadcrumb={breadcrumb}
  />

  <!-- Tarjetas de Directorio -->
  <section class="directorio-section" aria-labelledby="directorio-title">
    <div class="container">
      <h2 id="directorio-title" class="sr-only">Directorios disponibles</h2>

      <div class="directorio-grid">
        {directorios.map((dir) => (
          <a
            href={dir.url}
            class={`directorio-card directorio-card--${dir.color}`}
            target="_blank"
            rel="noopener noreferrer"
          >
            <div class="directorio-card__icon">
              <i class={`fa-solid ${dir.icon}`} aria-hidden="true"></i>
            </div>
            <h3 class="directorio-card__titulo">
              {dir.titulo}
              {dir.external && (
                <i class="fa-solid fa-arrow-up-right-from-square external-icon" aria-hidden="true"></i>
              )}
            </h3>
            <p class="directorio-card__descripcion">{dir.descripcion}</p>
            <span class="directorio-card__action">
              {dir.external ? 'Ir al sitio' : 'Descargar PDF'}
              <i class="fa-solid fa-arrow-right" aria-hidden="true"></i>
            </span>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Escala Salarial -->
  <section class="escala-section" aria-labelledby="escala-title">
    <div class="container">
      <div class="escala-card">
        <div class="escala-card__content">
          <div class="escala-card__icon">
            <i class="fa-solid fa-coins" aria-hidden="true"></i>
          </div>
          <div>
            <h2 id="escala-title">Escala Salarial</h2>
            <p>Servidores Públicos de la Agencia ITRC - Decreto 611 de 2025</p>
          </div>
        </div>
        <a
          href="https://www.itrc.gov.co/Itrc/wp-content/uploads/2025/09/Decretos-Salariales-611-de-2025-Departamento-Administrativo-de-la-Funcion-Publica-Gestor-Normativo.pdf"
          class="btn btn--primary"
          target="_blank"
          rel="noopener noreferrer"
        >
          <i class="fa-solid fa-file-pdf" aria-hidden="true"></i>
          Ver Escala Salarial
        </a>
      </div>
    </div>
  </section>

  <!-- Información adicional -->
  <section class="info-adicional" aria-labelledby="info-title">
    <div class="container">
      <SectionTitle title="Información Adicional" size="lg" />

      <div class="info-grid">
        <div class="info-item">
          <div class="info-item__icon">
            <i class="fa-solid fa-building-columns" aria-hidden="true"></i>
          </div>
          <h3>SIGEP II</h3>
          <p>El Sistema de Información y Gestión del Empleo Público permite consultar las hojas de vida de los servidores públicos y contratistas del Estado colombiano.</p>
          <a
            href="https://www.funcionpublica.gov.co/web/sigep/hojas-de-vida"
            class="info-item__link"
            target="_blank"
            rel="noopener noreferrer"
          >
            Consultar hojas de vida
            <i class="fa-solid fa-external-link-alt" aria-hidden="true"></i>
          </a>
        </div>

        <div class="info-item">
          <div class="info-item__icon">
            <i class="fa-solid fa-sitemap" aria-hidden="true"></i>
          </div>
          <h3>Estructura Orgánica</h3>
          <p>Conozca la estructura organizacional de la Agencia ITRC y las funciones de cada dependencia.</p>
          <a href={`${base}agencia/organigrama`} class="info-item__link">
            Ver Organigrama
            <i class="fa-solid fa-arrow-right" aria-hidden="true"></i>
          </a>
        </div>

        <div class="info-item">
          <div class="info-item__icon">
            <i class="fa-solid fa-phone" aria-hidden="true"></i>
          </div>
          <h3>Contacto</h3>
          <p>Si requiere información adicional sobre los servidores o contratistas de la entidad, contáctenos.</p>
          <a href={`${base}agencia/contacto`} class="info-item__link">
            Datos de contacto
            <i class="fa-solid fa-arrow-right" aria-hidden="true"></i>
          </a>
        </div>
      </div>
    </div>
  </section>
</Base>

<style>
  /* Directorio Section */
  .directorio-section {
    padding: var(--space-16) var(--space-6);
    background: var(--gray-50);
  }

  .directorio-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: var(--space-6);
    max-width: 1000px;
    margin: 0 auto;
  }

  .directorio-card {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    padding: var(--space-8);
    background: var(--white);
    border-radius: var(--radius-xl);
    box-shadow: var(--shadow-md);
    text-decoration: none;
    transition: all var(--transition-base);
    position: relative;
    overflow: hidden;
  }

  .directorio-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
  }

  .directorio-card--navy::before {
    background: var(--itrc-navy);
  }

  .directorio-card--gold::before {
    background: var(--itrc-gold);
  }

  .directorio-card--green::before {
    background: var(--green-accent);
  }

  .directorio-card:hover {
    transform: translateY(-8px);
    box-shadow: var(--shadow-xl);
  }

  .directorio-card__icon {
    width: 80px;
    height: 80px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: var(--radius-full);
    margin-bottom: var(--space-5);
    font-size: var(--font-size-3xl);
    transition: all var(--transition-base);
  }

  .directorio-card--navy .directorio-card__icon {
    background: rgba(21, 37, 63, 0.1);
    color: var(--itrc-navy);
  }

  .directorio-card--gold .directorio-card__icon {
    background: rgba(var(--itrc-gold-rgb), 0.15);
    color: var(--itrc-gold);
  }

  .directorio-card--green .directorio-card__icon {
    background: rgba(5, 150, 105, 0.1);
    color: var(--green-accent);
  }

  .directorio-card:hover .directorio-card__icon {
    transform: scale(1.1);
  }

  .directorio-card--navy:hover .directorio-card__icon {
    background: var(--itrc-navy);
    color: var(--white);
  }

  .directorio-card--gold:hover .directorio-card__icon {
    background: var(--itrc-gold);
    color: var(--itrc-navy);
  }

  .directorio-card--green:hover .directorio-card__icon {
    background: var(--green-accent);
    color: var(--white);
  }

  .directorio-card__titulo {
    color: var(--itrc-navy);
    font-size: var(--font-size-xl);
    margin-bottom: var(--space-3);
    display: flex;
    align-items: center;
    gap: var(--space-2);
  }

  .external-icon {
    font-size: var(--font-size-sm);
    opacity: 0.5;
  }

  .directorio-card__descripcion {
    color: var(--gray-600);
    font-size: var(--font-size-sm);
    line-height: 1.6;
    margin-bottom: var(--space-5);
    flex-grow: 1;
  }

  .directorio-card__action {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    font-weight: 600;
    font-size: var(--font-size-sm);
    transition: gap var(--transition-fast);
  }

  .directorio-card--navy .directorio-card__action {
    color: var(--itrc-navy);
  }

  .directorio-card--gold .directorio-card__action {
    color: var(--itrc-gold);
  }

  .directorio-card--green .directorio-card__action {
    color: var(--green-accent);
  }

  .directorio-card:hover .directorio-card__action {
    gap: var(--space-3);
  }

  /* Escala Section */
  .escala-section {
    padding: var(--space-12) var(--space-6);
  }

  .escala-card {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: var(--space-6);
    max-width: 800px;
    margin: 0 auto;
    padding: var(--space-8);
    background: linear-gradient(135deg, var(--itrc-navy) 0%, var(--itrc-navy-medium) 100%);
    border-radius: var(--radius-xl);
    box-shadow: var(--shadow-xl);
  }

  .escala-card__content {
    display: flex;
    align-items: center;
    gap: var(--space-5);
  }

  .escala-card__icon {
    width: 64px;
    height: 64px;
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(var(--itrc-gold-rgb), 0.2);
    border-radius: var(--radius-lg);
    font-size: var(--font-size-2xl);
    color: var(--itrc-gold);
  }

  .escala-card h2 {
    color: var(--white);
    font-size: var(--font-size-xl);
    margin-bottom: var(--space-1);
  }

  .escala-card p {
    color: rgba(255, 255, 255, 0.7);
    font-size: var(--font-size-sm);
    margin: 0;
  }

  /* Info Adicional */
  .info-adicional {
    padding: var(--space-16) var(--space-6);
    background: var(--gray-50);
  }

  .info-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: var(--space-6);
    max-width: 1000px;
    margin: 0 auto;
  }

  .info-item {
    background: var(--white);
    padding: var(--space-6);
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-sm);
    text-align: center;
  }

  .info-item__icon {
    width: 56px;
    height: 56px;
    margin: 0 auto var(--space-4);
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--gray-100);
    border-radius: var(--radius-full);
    color: var(--itrc-navy);
    font-size: var(--font-size-xl);
  }

  .info-item h3 {
    color: var(--itrc-navy);
    font-size: var(--font-size-lg);
    margin-bottom: var(--space-3);
  }

  .info-item p {
    color: var(--gray-600);
    font-size: var(--font-size-sm);
    line-height: 1.6;
    margin-bottom: var(--space-4);
  }

  .info-item__link {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    color: var(--itrc-gold);
    font-weight: 600;
    font-size: var(--font-size-sm);
    text-decoration: none;
    transition: gap var(--transition-fast);
  }

  .info-item__link:hover {
    gap: var(--space-3);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .directorio-section,
    .info-adicional {
      padding: var(--space-12) var(--space-4);
    }

    .escala-section {
      padding: var(--space-8) var(--space-4);
    }

    .escala-card {
      flex-direction: column;
      text-align: center;
      padding: var(--space-6);
    }

    .escala-card__content {
      flex-direction: column;
    }

    .directorio-card {
      padding: var(--space-6);
    }

    .directorio-card__icon {
      width: 64px;
      height: 64px;
      font-size: var(--font-size-2xl);
    }
  }
</style>
