---
import { resolveUrl } from '../utils/url';

export interface RelatedLink {
  titulo: string;
  descripcion: string;
  url: string;
  icon: string;
}

export interface Props {
  links: RelatedLink[];
  title?: string;
}

const { links, title } = Astro.props;
---

<section class="related-links">
  <div class="container">
    {title && <h2 class="related-links__title">{title}</h2>}

    <div class="related-links__grid">
      {links.map((link) => (
        <a
          href={resolveUrl(link.url)}
          class="related-link-card"
          target={link.url.startsWith('http') ? '_blank' : undefined}
          rel={link.url.startsWith('http') ? 'noopener noreferrer' : undefined}
        >
          <div class="related-link-card__icon">
            <i class={`fa-solid ${link.icon}`} aria-hidden="true"></i>
          </div>
          <div class="related-link-card__content">
            <h3>{link.titulo}</h3>
            <p>{link.descripcion}</p>
          </div>
          <i class="fa-solid fa-arrow-right related-link-card__arrow" aria-hidden="true"></i>
        </a>
      ))}
    </div>
  </div>
</section>

<style>
  .related-links {
    padding: var(--space-10) var(--space-6);
    background: var(--white);
  }

  .related-links__title {
    text-align: center;
    color: var(--itrc-navy);
    font-size: var(--font-size-xl);
    margin-bottom: var(--space-8);
  }

  .related-links__grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: var(--space-4);
    max-width: 800px;
    margin: 0 auto;
  }

  .related-link-card {
    display: flex;
    align-items: center;
    gap: var(--space-4);
    padding: var(--space-5);
    background: var(--gray-50);
    border-radius: var(--radius-lg);
    text-decoration: none;
    transition: all var(--transition-base);
  }

  .related-link-card:hover {
    background: var(--itrc-navy);
    transform: translateY(-2px);
  }

  .related-link-card__icon {
    width: var(--icon-lg);
    height: var(--icon-lg);
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(var(--itrc-gold-rgb), 0.15);
    border-radius: var(--radius-md);
    color: var(--itrc-gold);
    font-size: var(--font-size-xl);
  }

  .related-link-card:hover .related-link-card__icon {
    background: rgba(255, 255, 255, 0.15);
  }

  .related-link-card__content {
    flex: 1;
  }

  .related-link-card__content h3 {
    color: var(--itrc-navy);
    font-size: var(--font-size-base);
    margin-bottom: var(--space-1);
    transition: color var(--transition-fast);
  }

  .related-link-card:hover .related-link-card__content h3 {
    color: var(--white);
  }

  .related-link-card__content p {
    color: var(--gray-600);
    font-size: var(--font-size-sm);
    margin: 0;
    transition: color var(--transition-fast);
  }

  .related-link-card:hover .related-link-card__content p {
    color: rgba(255, 255, 255, 0.7);
  }

  .related-link-card__arrow {
    color: var(--gray-400);
    transition: all var(--transition-fast);
  }

  .related-link-card:hover .related-link-card__arrow {
    color: var(--itrc-gold);
    transform: translateX(4px);
  }

  @media (max-width: 768px) {
    .related-links {
      padding: var(--space-8) var(--space-4);
    }

    .related-links__grid {
      grid-template-columns: 1fr;
    }
  }
</style>
