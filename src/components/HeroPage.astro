---
export interface Props {
  title: string;
  subtitle?: string;
  badge?: string;
  icon?: string;
  image?: string;
  breadcrumb?: Array<{ label: string; href?: string }>;
}

const { title, subtitle, badge, icon, image, breadcrumb } = Astro.props;
---

<section class="hero-page">
  <div class="container">
    {breadcrumb && breadcrumb.length > 0 && (
      <nav class="hero-page__breadcrumb" aria-label="Ruta de navegaciÃ³n">
        {breadcrumb.map((item, index) => (
          <>
            {item.href ? (
              <a href={item.href}>{item.label}</a>
            ) : (
              <span aria-current="page">{item.label}</span>
            )}
            {index < breadcrumb.length - 1 && (
              <span class="hero-page__breadcrumb-separator" aria-hidden="true">/</span>
            )}
          </>
        ))}
      </nav>
    )}

    {badge && (
      <span class="hero-page__badge">{badge}</span>
    )}

    {image && (
      <div class="hero-page__icon hero-page__icon--image">
        <img src={image} alt="" aria-hidden="true" />
      </div>
    )}

    {icon && !image && (
      <div class="hero-page__icon">
        <i class={`fa-solid ${icon}`} aria-hidden="true"></i>
      </div>
    )}

    <h1 class="hero-page__title">{title}</h1>

    {subtitle && (
      <p class="hero-page__subtitle">{subtitle}</p>
    )}

    <slot />
  </div>
</section>

<style>
  .hero-page {
    background: linear-gradient(135deg, var(--theme-hero-from) 0%, var(--theme-hero-to) 100%);
    padding: var(--space-14) var(--space-6) var(--space-12);
    text-align: center;
    position: relative;
  }

  .hero-page::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%23ffffff' fill-opacity='0.03'%3E%3Cpath d='M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E");
    opacity: 0.5;
    pointer-events: none;
  }

  .hero-page .container {
    position: relative;
    z-index: 1;
  }

  .hero-page__breadcrumb {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-2);
    margin-bottom: var(--space-5);
    font-size: var(--font-size-sm);
    flex-wrap: wrap;
  }

  .hero-page__breadcrumb a {
    color: var(--theme-hero-breadcrumb);
    text-decoration: none;
    transition: color var(--transition-fast);
  }

  .hero-page__breadcrumb a:hover {
    color: var(--itrc-gold);
  }

  .hero-page__breadcrumb-separator {
    color: rgba(255, 255, 255, 0.5);
  }

  .hero-page__breadcrumb [aria-current="page"] {
    color: var(--white);
  }

  .hero-page__badge {
    display: inline-block;
    background: var(--itrc-gold);
    color: var(--itrc-navy);
    font-size: var(--font-size-xs);
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    padding: var(--space-2) var(--space-4);
    border-radius: var(--radius-full);
    margin-bottom: var(--space-6);
  }

  .hero-page__icon {
    width: var(--icon-2xl);
    height: var(--icon-2xl);
    margin: 0 auto var(--space-5);
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--theme-hero-icon-bg);
    border-radius: var(--radius-xl);
    font-size: var(--font-size-3xl);
    color: var(--itrc-gold);
  }

  .hero-page__icon--image {
    background: rgba(255, 255, 255, 0.15);
    padding: var(--space-2);
  }

  .hero-page__icon--image img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .hero-page__title {
    color: var(--theme-hero-text);
    font-size: clamp(1.75rem, 4vw, 2.5rem);
    margin-bottom: var(--space-3);
  }

  .hero-page__subtitle {
    color: var(--theme-hero-text-secondary);
    font-size: var(--font-size-base);
    max-width: 700px;
    margin: 0 auto;
  }

  @media (max-width: 768px) {
    .hero-page {
      padding: var(--space-10) var(--space-4) var(--space-8);
    }

    .hero-page__icon {
      width: var(--icon-xl);
      height: var(--icon-xl);
      font-size: var(--font-size-2xl);
    }
  }
</style>
