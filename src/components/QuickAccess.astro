---
import quickAccessData from '../content/settings/quickAccess.json';
import { resolveUrl } from '../utils/url';
---

<section class="quick-access" aria-labelledby="quick-access-title">
  <h2 id="quick-access-title" class="sr-only">Accesos rapidos</h2>

  <div class="quick-access__grid">
    {quickAccessData.items.map((item, index) => (
      <a
        href={resolveUrl(item.url, item.external)}
        class={`quick-access__item ${item.highlighted ? 'quick-access__item--highlighted' : ''}`}
        {...(item.external ? { target: '_blank', rel: 'noopener noreferrer' } : {})}
      >
        <span class="quick-access__icon">
          <i class={`fa-solid ${item.icon}`} aria-hidden="true"></i>
        </span>
        <span class="quick-access__label">
          {item.label}
          {item.external && (
            <i class="fa-solid fa-arrow-up-right-from-square quick-access__external" aria-hidden="true"></i>
          )}
        </span>
      </a>
    ))}
  </div>
</section>

<style>
  .quick-access {
    background: var(--itrc-navy);
    padding: var(--space-12) var(--space-6);
  }

  .quick-access__grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: var(--space-4);
    max-width: var(--container-max);
    margin: 0 auto;
  }

  .quick-access__item {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    padding: var(--space-6) var(--space-4);
    background: rgba(255, 255, 255, 0.08);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: var(--radius-lg);
    text-decoration: none;
    color: var(--white);
    transition: all var(--transition-base);
    animation: fadeInUp 0.5s ease-out forwards;
    opacity: 0;
  }

  .quick-access__item:nth-child(1) { animation-delay: 0s; }
  .quick-access__item:nth-child(2) { animation-delay: 0.1s; }
  .quick-access__item:nth-child(3) { animation-delay: 0.2s; }
  .quick-access__item:nth-child(4) { animation-delay: 0.3s; }
  .quick-access__item:nth-child(5) { animation-delay: 0.4s; }
  .quick-access__item:nth-child(6) { animation-delay: 0.5s; }
  .quick-access__item:nth-child(7) { animation-delay: 0.6s; }
  .quick-access__item:nth-child(8) { animation-delay: 0.7s; }

  .quick-access__item:hover {
    background: rgba(255, 255, 255, 0.15);
    border-color: var(--itrc-gold);
    transform: translateY(-6px);
    box-shadow: 0 12px 32px rgba(0, 0, 0, 0.4);
  }

  .quick-access__item--highlighted {
    background: rgba(var(--itrc-gold-rgb), 0.2);
    border-color: var(--itrc-gold);
  }

  .quick-access__item--highlighted:hover {
    background: rgba(var(--itrc-gold-rgb), 0.35);
  }

  .quick-access__icon {
    width: var(--icon-xl);
    height: var(--icon-xl);
    margin-bottom: var(--space-4);
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(255, 255, 255, 0.1);
    border-radius: var(--radius-full);
    transition: all var(--transition-base);
  }

  .quick-access__item:hover .quick-access__icon {
    background: var(--itrc-gold);
    transform: scale(1.1);
  }

  .quick-access__icon i {
    font-size: var(--font-size-2xl);
    color: var(--itrc-gold);
    transition: color var(--transition-fast);
  }

  .quick-access__item:hover .quick-access__icon i {
    color: var(--itrc-navy);
  }

  .quick-access__label {
    font-size: var(--font-size-sm);
    font-weight: 600;
    line-height: 1.3;
  }

  .quick-access__external {
    font-size: var(--font-size-xs);
    opacity: 0.7;
    margin-left: var(--space-1);
  }

  @media (max-width: 768px) {
    .quick-access__grid {
      grid-template-columns: repeat(2, 1fr);
      gap: var(--space-3);
      max-width: 360px;
    }

    .quick-access__item {
      padding: var(--space-5) var(--space-3);
    }

    .quick-access__icon {
      width: 52px;
      height: 52px;
    }

    .quick-access__icon i {
      font-size: var(--font-size-xl);
    }

    .quick-access__label {
      font-size: var(--font-size-xs);
    }
  }
</style>
